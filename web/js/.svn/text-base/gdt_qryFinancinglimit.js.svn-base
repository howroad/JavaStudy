$(function(){
	//金额单位
	var unit = $("select[id$='_list.moneyUnit']");
	var moneyUnit = $("input[id$='_qry.moneyUnit']").val();
	if (moneyUnit == '') {
		moneyUnit = unit.val();
	}
	/*unit.val(moneyUnit);*/
	unit.attr('value',moneyUnit);
	
	
	//剩余可使用额度
	var pageCode = $("input[id='pageCode']").val();
	if (pageCode == 'gdt_canUesdLimit') {
		$("input[id='gdt_canUesdLimit_qry.refresh']").parent().hide();
		
		var totalCount = $("input[id$='gdt_canUesdLimit_list.totalCount']");
		var limitCltName = $("input[id='gdt_canUesdLimit_qry.limitCltName']").val();
		totalCount.parent().html("融资单位：" + limitCltName 
				+ "；共计" + totalCount.val() + "笔").append(totalCount);
	}
	
});

//多选值add by yushimin
function setAllNsclient(obj){
		var cltno = $("input[id$=.cltNo]").val();
		var cltName = $("input[id$=.cltName]").val();
		if(cltno != ''){
			cltno +=  ',';
			cltName +=  ',';
		}
		if(obj.cltNo == ''){
			$("input[id$=.cltNo]").val(obj.cltNo);
			$("input[id$=.cltName]").val(obj.cltName);
		}else{
			$("input[id$=.cltNo]").val(cltno+obj.cltNo);
			$("input[id$=.cltName]").val(cltName+obj.cltName);
		}
}

