//年度新增融资额
function showNewContractByYear(obj) {
	var tr = $(obj).parents("tr").first();
	var limitCltNo = tr.find("input[id$='limitCltNo']").val();
	var bussType = tr.find("input[id$='bussType']").val();
	var year = $("[id$='_qry.year']").val();
	var currencyNo = $("select[id$='_qry.currencyNo']").val();
	
	if (limitCltNo == '' || year == '' || currencyNo == '') {
		return;
	}
	if (bussType == undefined || bussType == 'all') {
		bussType = "";
	}
	
	var url = "GDEBIT@gdt_newContract.sf?m=v&limitCltNo=" + limitCltNo 
		+ "&year=" + year + "&currencyNo=" + currencyNo
		+ "&bussVariety=" + bussType;
	openwin(url, '年度新增融资额', 1000, 500);
}

