function sameAmount(){
	var limitAmounts = document.getElementById("gdt_limit_map.limitAmounts").value;
	var limitAmount = $('input[id$="gdt_limit_list.limitAmount"]');
	
	limitAmount.each(function(){
		$(this).val(FormatMoney(limitAmounts,2));
	});
	
	caclTotalAmount();
}

/**
 * 点击保存按钮保存成功
 */
function smartForm_confirm_true(){
 	 windowClose();
}
function smartForm_confirm(msg) {
	alert(msg);
	smartForm_confirm_true();
}
function doChange(obj){
	var objBtn = document.getElementById("gdt_limit_map.refresh");
	objBtn.click();
}

function caclTotalAmount(){
	var totalAmount = 0.0;
    var limitAmount = $('input[id$="gdt_limit_list.limitAmount"]:visible');
    var matching = new RegExp("," , "g") ;
	limitAmount.each(function(){
		var limitAmount = $(this).val();
		totalAmount = totalAmount + parseFloat(limitAmount.replace(matching , '')) * 100
	});
	
	document.getElementById('gdt_limit_list.limitAmount.total').innerHTML = FormatMoney(totalAmount/100,2)
}
