//提款台账补录控制
$(function() {
	$("input[id$=ISINPUT]").each(function(i,el){
		if($(el).val() == '1'){
			$(nstc.sf.findParent(el,"TD")).find("input[type='checkbox']").attr('checked',true);
		}
	});
	if($("[id$=isInputFlag]:visible").length == $("[id$=isInputFlag]:checked").length){
		$("[id$=_isInputChecks]").attr('checked',true);
	}
})

//复选框全选
function ledgerInput_all_checkbox(obj, name) {
	try {
		var isCheck = false;
		if (obj.checked == true) {
			isCheck = true
		}
		var checkBoxs = document.getElementsByName(name);
		for ( var i = 0; i < checkBoxs.length; i++) {
			if(checkBoxs[i] == obj) continue ;
			checkBoxs[i].checked = isCheck;			
			clickLedgerInputCheckbox(checkBoxs[i]);
		}
		smartForm_all_checkbox(obj, name);
	} catch (e) {

	}
}
//通过复选框给隐藏框赋值
clickLedgerInputCheckbox = function(obj){
	var value = obj.value;
	if(obj.checked){
		$(nstc.sf.findParent(obj,"TD")).find("input[id$=ISINPUT]").val("1");
	}else{
		$(nstc.sf.findParent(obj,"TD")).find("input[id$=ISINPUT]").val("0");
	}
}