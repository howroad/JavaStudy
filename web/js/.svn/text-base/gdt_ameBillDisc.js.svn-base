//间接融资-贷款》票据贴现
$(function(obj){
	var m = $('[id="m"]').val();
	if ('v' == m) {
		return;
	}
	//文本显示
	showAsText($('[id$="_info.cltName"]'));
	showAsText($('[id$="_info.contractNo"]'));
	showAsText($('[id$="_info.assBankName"]'));
	showAsText($('[id$="_info.interestAccDay"]'));
	showAsText($('[id$="_info.principalMethod"]'));
	showAsText($('[id$="_info.billStyle"]'));
	var isRecourse_s = $('[id$="_info.isRecourse_s"]');
	$('[id$="_info.isRecourse_s"]').parent().text('1' == isRecourse_s.val() ? '是' : '否').append(obj);
	var isRecourse = $('<input>').attr({"id" : "gdt_conBillDisc_info.isRecourse", "value" : isRecourse_s.val(), "type" : "hidden"})
	$('[name$="_info.isRecourse"]').eq(1).parents('span').first().html(isRecourse);
	$('[id$="bill.sel"]').hide();
	$('[id$="bill.add"]').hide();
	$('[id$="bill.del"]').hide();
});