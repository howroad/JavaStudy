function checkActDate(obj){
	var minActDate = $("[id$='minActDate']").val();
	var maxActDate = $("[id$='maxActDate']").val();
	var date = obj.value;
	if(!compareDate(minActDate,date,"开始日不能大于截止日")){
		obj.value = "";
	}
	if(!compareDate(date,maxActDate,"截止日不能小于开始日")){
		obj.value = "";
	}
}
//修改金额单位 刷新页面 改变金额值
function setAmountByUnit(obj) {
	var unit = obj.value;
	$("input[id='gdt_qryFees_qry.moneyUnit']").val(unit);
	var refreshObj = $("input[id='gdt_qryFees_qry.refresh']")[0];
	smartForm_doRefresh(refreshObj);
	$("select[id$='moneyUnit']").attr('value',$("select[id$='moneyUnit']").val());
}