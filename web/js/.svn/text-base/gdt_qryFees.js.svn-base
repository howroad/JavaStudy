$(function(){
	var list=$('table[id="gdt_qryFees_list"]');
	var qry=$('div[id$="gdt_qryFees_qry"]');
	var currencyNo=qry.find('select[id$="currencyNo"]').val();
	var currencyName=qry.find('select[id$="currencyNo"]').find('option[value="'+currencyNo+'"]').text();
	var trs=list.find('tbody tr:visible');
	for(var i=0;i<trs.length;i++){
		if(currencyNo==''){
			$(trs[i]).find('input[id$="currencyNo"]').parent().html('折人民币');
		}else{
			$(trs[i]).find('input[id$="currencyNo"]').parent().html(currencyName);
		}
	}
	//金额单位
	$("select[id$='moneyUnit']").attr('value',$("input[id$='moneyUnit']").val());
	setMinActDate();
});

function setMinActDate() {
	var minActDate = $("[id$='minActDate']").val();
	if (minActDate == '') {
		var year = new Date();
		//$("[id$='minActDate']").val(year.getYear() + "-" + "01-01");
		$("[id$='minActDate']").val(year.getFullYear() + "-" + "01-01");
	}
}

function showLedgerDetails(obj,type){
	var tr=$(obj).parents('tr').first();
	var cltNo=tr.find('input[id$="cltNo"]').val();
	var bussVariety=tr.find('input[id$="bussVariety"]').val();
	var qry=$('div[id$="gdt_qryFees_qry"]');
	var maxDate = "";//qry.find('input[id$="actDate"]').val();
	setMinActDate();
	var minActDate = qry.find('input[id$="minActDate"]').val();
	var maxActDate = qry.find('input[id$="maxActDate"]').val();
	var currencyNo=qry.find('select[id$="currencyNo"]').val();
	var url='GDEBIT@gdt_ledgerDetails.sf?cltNo=' + cltNo + '&bussVariety=' + bussVariety
			+ '&maxDate=' + maxDate + '&currencyNo=' + currencyNo + '&type=' + type
			+ '&minActDate=' + minActDate + '&maxActDate=' + maxActDate;
	openwin(url,"融资付款登记查询列表",1000,800);
}
function showPlanDetails(obj,type){
	var tr=$(obj).parents('tr').first();
	var cltNo=tr.find('input[id$="cltNo"]').val();
	var bussVariety=tr.find('input[id$="bussVariety"]').val();
	var qry=$('table[id$="gdt_qryFees_qry"]');
	var maxDate = '';//qry.find('input[id$="actDate"]').val();
