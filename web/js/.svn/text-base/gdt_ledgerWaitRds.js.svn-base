$(function(){
	var list=$('table[id="gdt_ledgerWaitRds_list"]');
	var trs=list.find("tbody tr:visible");
	for(var i=0;i<trs.length;i++){
		var note=$(trs[i]).find('input[id$="approveNote"]');
		if(note.val()!=''){
			$(trs[i]).css("background-color", "#FFC0CB");
			note.parent().css({"color":"red"});
		}
	}
});
