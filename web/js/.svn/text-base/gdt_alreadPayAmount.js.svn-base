/**
 * 金额单位改变页面
 * @param obj
 */
$(function(){
	//金额单位   
	$("input[id='gdt_alreadPayAmount_qry.clearTr']").parent().parent().parent("TR").remove();
	var msg = $("input[id='gdt_alreadPayAmount_qry.fetchNo_']").val();
	$("input[id='gdt_alreadPayAmount_qry.fetchNo_']").parent().remove()
	var str = '&nbsp&nbsp&nbsp&nbsp<span>'+msg+'</span>';
	$("span[id='gdt_alreadPayAmount_qry.titleId']").parent("TD").append(str);
});
function setAmountByUnit() {
	var refresh = $("input[id='gdt_alreadPayAmount_qry.refresh']")[0];
	smartForm_doRefresh(refresh);
}
/**
 * 台账管理录入界面
 * @param obj
 */
function showLedger(obj){
	var tr=$(obj).parents('tr').first();
	var contractId=tr.find('input[id$="contractId"]').val();
	var contexecId=obj.innerHTML;
	var url="GDEBIT@gdt_ledgerLiquidity.sf?m=v&type=2&contractId="+contractId+"&contexecId="+contexecId;
	openwin(url, '还款详情', 1200,1000);
}