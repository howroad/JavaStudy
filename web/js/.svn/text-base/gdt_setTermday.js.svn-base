// 初始化
$(function(){
	$("input[id$='_list.bussVariety']").each(function() {
		var bussVariety = this.value;
		var tr = $(this).parents("tr").first();
		if (bussVariety == 'CLMS02') {//债券发行
			var termDay = tr.find("input[id$='termDay']");
			var termdaySuffix = tr.find("input[id$='termdaySuffix']");
			var termdaySuffixVal = termdaySuffix.val();
			
			var totalDay = "";
			if (termdaySuffixVal == undefined || termdaySuffixVal == '') {
				termdaySuffixVal = 0;
				totalDay = parseInt(termDay.val()) + parseInt(termdaySuffixVal);
			} else if (termdaySuffixVal == 'N') {
				totalDay = termDay.val() + "+" + termdaySuffixVal;
			} else {
				totalDay = parseInt(termDay.val()) + parseInt(termdaySuffixVal);
			}
			//termDay.parent().html(totalDay + "年").append(termDay);
		}
