$(function() {
	$("input[id$=Check]").each(function(i,el){
		if($(el).val() == 'on'){
			$(nstc.sf.findParent(el,"TD")).find("input[type='checkbox']").attr('checked',true);
		}
	});
	if($("[id$=applyCheckFlag]:visible").length == $("[id$=applyCheckFlag]:checked").length){
		$("[id$=_applyChecks]").attr('checked',true);
	}
	if($("[id$=conCheckFlag]:visible").length == $("[id$=conCheckFlag]:checked").length){
		$("[id$=_conChecks]").attr('checked',true);
	}
	if($("[id$=changeCheckFlag]:visible").length == $("[id$=changeCheckFlag]:checked").length){
		$("[id$=_changeChecks]").attr('checked',true);
	}
	if($("[id$=drawCheckFlag]:visible").length == $("[id$=drawCheckFlag]:checked").length){
		$("[id$=_drawChecks]").attr('checked',true);
	}
	if($("[id$=bondCheckFlag]:visible").length == $("[id$=bondCheckFlag]:checked").length){
		$("[id$=_bondChecks]").attr('checked',true);
	}
	if($("[id$=repairCheckFlag]:visible").length == $("[id$=repairCheckFlag]:checked").length){
		$("[id$=_repairChecks]").attr('checked',true);
	}
})


function fileUpload_all_checkbox(obj, name) {
	try {
		var isCheck = false;
		if (obj.checked == true) {
			isCheck = true
		}
		var checkBoxs = document.getElementsByName(name);
		for ( var i = 0; i < checkBoxs.length; i++) {
			if(checkBoxs[i] == obj) continue ;
			checkBoxs[i].checked = isCheck;			
			clickFileUploadCheckbox(checkBoxs[i]);
		}
	} catch (e) {

	}
}
clickFileUploadCheckbox = function(obj){
	var value = obj.value;
	if(obj.checked){
		$(nstc.sf.findParent(obj,"TD")).find("input[id$=Check]").val("on");
	}else{
		$(nstc.sf.findParent(obj,"TD")).find("input[id$=Check]").val(" ");
	}
}