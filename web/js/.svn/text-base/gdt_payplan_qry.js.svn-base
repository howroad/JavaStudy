//查询操作
function doQuery(obj){
	var minEndDate = $('input[id$=.minDate]').val();
	var maxEndDate = $('input[id$=.maxDate]').val();
//	if(minEndDate=='' || maxEndDate==''){
//		alert("统计期间不能为空");
//		return;
//	}
	if(!compareDate(minEndDate, maxEndDate, '统计期间范围不合理')){
		return;
	} 
	smartForm_doRefresh(obj)
}
//选择金融合作网点
function selectAssBank(){
	var url = "GDEBIT@gdt_associateBankSlt.sf";
	openwin(url, '金融合作网点列表', 900, 500);
}

//选择 -- 金融合作网点
function setAssBank(obj){
	var assBankId= obj.assBankId;
	var assBankName= obj.assBankName;
	$("input[id$='_qry.assBankName']").val(assBankName);
	$("input[id$='_qry.assBankId']").val(assBankId);
}

function setAmountByUnit(obj) {
	var unit = obj.value;
	$("input[id='gdt_staticsPayplan_qry.moneyUnit']").val(unit);
	//刷新
	var refresh = $("input[id='gdt_staticsPayplan_qry.refresh']")[0];
	smartForm_doRefresh(refresh);
}