$(function(){
	var list=$('table[id="gdt_staticsBalance_list"]');
	var qry=$('div[id$="gdt_staticsBalance_qry"]');
	var currencyNo=qry.find('select[id$="currencyNo"]').val();
	var currencyName=qry.find('select[id$="currencyNo"]').find('option[value="'+currencyNo+'"]').text();
	var trs=list.find('tbody tr:visible');
	for(var i=0;i<trs.length;i++){
		if(currencyNo==''){
			$(trs[i]).find('input[id$="currencyNo"]').parent().html('折人民币');
		}else{
			$(trs[i]).find('input[id$="currencyNo"]').parent().html(currencyName);
		}
	}
});
//查询操作
function doRefresh(obj){
	var minEndDate = $('input[id$=.minDate]').val();
	var maxEndDate = $('input[id$=.maxDate]').val();
	/*if(minEndDate=='' || maxEndDate==''){
		alert("统计期间不能为空");
		return;
	}*/
	var fd = new Date(maxEndDate.replace(/-/g, "/"));
	if (new Date() < Date.parse(fd)) {
		alert('统计期间结束日期不能大于当前日期');
		return;
	} 
	if(!compareDate(minEndDate, maxEndDate, '统计期间范围不合理')){
		return;
	} 
	smartForm_doRefresh(obj)
}